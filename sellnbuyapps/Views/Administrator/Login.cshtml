@model sellnbuyapps.Models.sbAdministrator

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href=@Url.Content("/Content/css/vendor/simple-line-icons.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/vendor/tooltipster.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/css/style.css")>
    <!-- favicon -->
    <link rel="icon" href="favicon.ico">
    <title>@ViewBag.Title - Sell & Buy Apps</title>
</head>
<body>
    <div class="section-wrap">
        <div class="section">
            <div align="center" style="margin-bottom:10px;"><span style="color:red;">@ViewBag.Message</span></div>
            <div class="form-popup">
                <div class="form-popup-content">
                    <h4 class="popup-title">Admin Login</h4>
                    <hr class="line-separator">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "rl-label" })
                        @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailId, "", new { @style = "color:Red" })
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "rl-label" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:Red" })
                        <span>
                            <button id="btnSubmit" class="button mid dark" style="margin: 10px 0 10px 0;">
                                Login <span class="primary">Now!</span>
                            </button>
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
