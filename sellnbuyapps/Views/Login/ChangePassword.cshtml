@model sellnbuyapps.Models.Login

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_SellerDashboard.cshtml";
}

<div class="section-headline-wrap">
    <div class="section-headline">
        <h2>Change Password</h2>
    </div>
</div>

<div class="section-wrap">
    <div class="section">
        <div align="center" style="margin-bottom:10px;">
            @if (ViewBag.Message == "Password changed successfully")
            {
                <span style="color:green;">@ViewBag.Message</span>
            }
            else
            {
                <span style="color:red;">@ViewBag.Message</span>
            }
        </div>
        <div class="form-popup">
            <div class="form-popup-content">
                <h4 class="popup-title">Change Password</h4>
                <!-- LINE SEPARATOR -->
                <hr class="line-separator">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "rl-label" })
                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @style = "color:red" })
                    @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "rl-label" })

                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @maxlength = "25" } })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @style = "color:red" })

                    @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "rl-label" })

                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @maxlength = "25" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @style = "color:red" })

                    <span>
                        <button id="btnSubmit" class="button mid dark" style="margin: 10px 0 10px 0;">
                            Change <span class="primary">Password!</span>
                        </button>
                    </span>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
