@model sellnbuyapps.Models.SbUserService

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
<div class="section-headline-wrap">
    <div class="section-headline">
        <h2>Registration</h2>
    </div>
</div>
<div class="section-wrap">
    <div class="section">
        <div align="center" style="margin-bottom:10px;">
            @if (ViewBag.Message == "Information has been saved successfully")
            {
                <span style="color:green;">@ViewBag.Message</span>
            }
            else
            {
                <span style="color:red;">@ViewBag.Message</span>
            }
        </div>

        <div class="form-popup">

            <div class="form-popup-content">
                <h4 class="popup-title">New Registration</h4>
                <!-- LINE SEPARATOR -->
                <hr class="line-separator">

                @using (Html.BeginForm("Registration", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "rl-label" })

                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @MaxLength="30" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @style = "color:red; float:right;" })

                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @MaxLength = "30" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @style = "color:red; float:right;" })

                    @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @MaxLength = "40" } })
                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @style = "color:red; float:right;" })

                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @MaxLength = "20" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red;float:right;" })

                    @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @onkeypress = "return onlyNos(event,this);", @MaxLength = "10" } })
                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @style = "color:red; float:right;" })

                    @Html.LabelFor(model => model.CompanyURL, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    @Html.EditorFor(model => model.CompanyURL, new { htmlAttributes = new { @class = "form-control", @style = "margin:0 0 0 0", @MaxLength = "50" } })
                    @Html.ValidationMessageFor(model => model.CompanyURL, "", new { @style = "color:red;float:right;" })

                    @Html.LabelFor(model => model.ProfilePicture, htmlAttributes: new { @class = "rl-label", @style = "margin: 12px auto;" })

                    <input type="file" name="fileUpload" class="upload-file upload-file-actions" />
                    @*@Html.EditorFor(model => model.Screenshot, new { htmlAttributes = new { @class = "form-control", @name = "fileUpload", @type = "file" } })*@
                    @Html.ValidationMessageFor(model => model.ProfilePicture, "", new { @style = "color:Red;float:right;margin-top: -28px" })

                    @*@Html.LabelFor(model => model.IsSeller, htmlAttributes: new { @class = "rl-label", @style = "margin: 20px 0 6px 21px;" })
                        <span>
                            @Html.CheckBoxFor(model => model.IsSeller, new { @class = "text-danger", @style = "margin: -18px 0 15px 2px;" })
                            @Html.ValidationMessageFor(model => model.IsSeller)
                        </span>*@
                    <span>
                        <button class="button mid dark" style="width:110px;">
                            Register <span class="primary">Now!</span>
                        </button>
                    </span>
                    <input id="BtnTest1" type="button" value="Login" style="width: 80px;margin: -42px 0 0 115px;" class="button mid dark" onclick="window.location.href = '../Login/Login'" />

                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    function onlyNos(e, t) {

        var charCode;
        if (window.event) {

            charCode = window.event.keyCode;
        }
        else if (e) {

            charCode = e.which;
        }
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {

           
            return false;
        }
        return true;
    }
</script>

