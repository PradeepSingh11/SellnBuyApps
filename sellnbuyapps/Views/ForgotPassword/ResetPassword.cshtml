@model sellnbuyapps.Models.ResetPassword

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}
<div class="section-headline-wrap">
    <div class="section-headline">
        <h2>Reset Password</h2>
    </div>
</div>

<div class="section-wrap">
    <div class="section">
        <div align="center" style="margin-bottom:10px;">
            @if (ViewBag.Message == "Password changed successfully")
            {
                <span style="color:green;">@ViewBag.Message</span>
            }
            else
            {
                <span style="color:red;">@ViewBag.Message</span>
            }
        </div>
        <div class="form-popup">
            <div class="form-popup-content">
                <h4 class="popup-title">Reset Password</h4>
                <!-- LINE SEPARATOR -->
                <hr class="line-separator">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "rl-label" })

                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @style = "color:red" })

                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "rl-label" })

                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @style = "color:red" })

                    <button class="button mid dark" style="margin: 5px 0 10px 0; width: 30%;">
                        Reset <span class="primary">Now!</span>
                    </button>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


